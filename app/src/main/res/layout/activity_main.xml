<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/employee_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="28sp"
        android:text="Employee Form"
        />
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:text="Username : "
        />
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/text_name"
        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="120dp"
            android:text="Gender "
            />
        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="20sp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="50dp"
            />
        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="20sp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="50dp"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:textSize="20sp"
        android:text="Email : "
        />
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginTop="170dp"
        android:layout_toRightOf="@+id/text_email"
        />

    <TextView
        android:id="@+id/text_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:textSize="20sp"
        android:text="Salary : "
        />
    <EditText
        android:id="@+id/edit_salary"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        android:layout_marginTop="240dp"
        android:layout_toRightOf="@+id/text_salary"
        />
    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:textSize="20sp"
        android:layout_marginLeft="60dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:backgroundTint="#44FF00"
        android:text="SEND DATA"
        android:onClick="onClickShowDetail"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_toRightOf="@+id/b1"
        android:text="  RESET "
        android:backgroundTint="#FF80AB"
        android:onClick="reset"
        />

</RelativeLayout>